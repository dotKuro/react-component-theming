      "name": "Noah Hummel",
      "email": "noah.hummel@thenativeweb.io"
    }
  ],
  "license": "LGPL-2.1",
  "devDependencies": {
    "@testing-library/react": "12.1.3",
    "@types/mocha": "9.1.0",
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.11",
    "assertthat": "6.4.0",
    "global-jsdom": "8.4.0",
    "jsdom": "19.0.0",
    "react-dom": "17.0.2",
    "semantic-release-configuration": "2.0.7",
    "ts-node": "10.5.0"
